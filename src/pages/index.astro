---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';
import Content from '~/components/widgets/Content.astro';

import { Image } from 'astro:assets';
import CompoundImage from '../assets/images/er_alpha_compounds.png';
import HeroImage from '../assets/images/splashimage.jpg';

const metadata = {
  title: 'Aethermol',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero>
    <Fragment slot="bg">
      <div class="absolute inset-0 overflow-hidden">
        <Image
          src={HeroImage}
          alt="Protein photo"
          class="w-full h-full object-cover opacity-20 scale-100"
          width={HeroImage.width}
          height={HeroImage.height}
        />
        <div
          class="absolute bottom-0 left-0 right-0 h-16 bg-gradient-to-t from-white dark:from-slate-900 to-transparent"
        >
        </div>
      </div>
    </Fragment>
    <Fragment slot="title"> Aethermol </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline"> Accelerating Drug Discovery with Physics-Guided Generative AI </span>
    </Fragment>
  </Hero>

  <!-- Features Widget *************** -->

  <Features
    id="features"
    tagline="Features"
    title="Advantages of Aethermol"
    subtitle="Explore the key features of Aethermol for drug design."
    items={[
      {
        title: 'Fast candidate design',
        description:
          'Design millions of promising molecule candidates in days with cutting-edge generative AI technology.',
        icon: 'tabler:rocket',
      },
      {
        title: 'Physics-based grounding',
        description:
          'Ground the AI model with highly accurate molecular dynamics-based absolute binding free energy (ABFE) calculations.',
        icon: 'tabler:math-function',
      },
      {
        title: 'Synthesizable and drug-like candidates',
        description:
          'Ensure high synthetic accessibility and drug-likeness compounds with similar properties to <a href="https://enamine.net/compound-collections/real-compounds" target="_blank" rel="noopener noreferrer" class="text-primary hover:underline">Enamine REAL</a>.',
        icon: 'tabler:flask',
      },
      {
        title: 'Customizable AI solutions',
        description: 'Offer fully customizable solutions for new targets and any combinations of desirable properties.',
        icon: 'tabler:diamond',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    tagline="Example"
    title="Explore compounds generated by Aethermol"
    subtitle="These example compounds were generated for the estrogen receptor alpha (ERÎ±), a well-known target with many approved therapeutics."
    imageTitle="Generated compounds with ABFE scores"
    imageSubtitle="For reference, ABFE scores for approved drugs of the estrogen receptor fall in the range of -10 to -25 kcal/mol."
    items={[
      {
        title: 'Strong predicted binding',
        description:
          'ABFE scores, the gold standard for computational binding affinity prediction, are shown for each generated compound. ABFE scores for approved drugs of the estrogen receptor fall in the range of -10 to -25 kcal/mol. Many Aethermol-generated compounds fall within this range, demonstrating their potential as viable drug candidates.',
      },
      {
        title: 'High synthetic accessibility',
        description:
          'Many of these compounds are likely to be readibly synthesizable, requiring only a few steps to produce.',
      },
      {
        title: 'Diverse and novel candidates',
        description:
          'The top scoring compounds show high structural diversity, with many novel scaffolds not previously reported in the literature.',
      },
    ]}
    image={{
      src: CompoundImage,
      alt: 'Generated compounds for estrogen receptor alpha',
      width: CompoundImage.width,
      height: CompoundImage.height,
    }}
  />
</Layout>
