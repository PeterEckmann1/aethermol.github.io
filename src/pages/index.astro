---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';
import Content from '~/components/widgets/Content.astro';
import Viewer3DIsland from '~/components/Viewer3DIsland.astro';

import { Image } from 'astro:assets';
import CompoundImage from '../assets/images/er_alpha_compounds.png';
import HeroImage from '../assets/images/splashimage.jpg';

const metadata = {
  title: 'Aethermol',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero>
    <Fragment slot="bg">
      <div class="absolute inset-0 overflow-hidden">
        <Image
          src={HeroImage}
          alt="Protein photo"
          class="w-full h-full object-cover opacity-20 scale-100"
          width={HeroImage.width}
          height={HeroImage.height}
        />
        <div
          class="absolute bottom-0 left-0 right-0 h-16 bg-gradient-to-t from-white dark:from-slate-900 to-transparent"
        >
        </div>
      </div>
    </Fragment>
    <Fragment slot="title"> Aethermol </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline"> Accelerating Drug Discovery with Physics-Guided Generative AI </span>
    </Fragment>
  </Hero>

  <!-- Features Widget *************** -->

  <Features
    id="features"
    tagline="Features"
    title="Advantages of Aethermol"
    subtitle="Explore the key features of Aethermol for drug design."
    items={[
      {
        title: 'Fast candidate design',
        description:
          'Design millions of promising molecule candidates in days with cutting-edge generative AI technology.',
        icon: 'tabler:rocket',
      },
      {
        title: 'Physics-based grounding',
        description:
          'Ground the AI model with highly accurate molecular dynamics-based absolute binding free energy (ABFE) calculations.',
        icon: 'tabler:math-function',
      },
      {
        title: 'Synthesizable and drug-like candidates',
        description:
          'Ensure high synthetic accessibility and drug-likeness compounds with similar properties to <a href="https://enamine.net/compound-collections/real-compounds" target="_blank" rel="noopener noreferrer" class="text-primary hover:underline">Enamine REAL</a>.',
        icon: 'tabler:flask',
      },
      {
        title: 'Customizable AI solutions',
        description: 'Offer fully customizable solutions for new targets and any combinations of desirable properties.',
        icon: 'tabler:diamond',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    tagline="Example"
    title="Explore compounds generated by Aethermol"
    subtitle="These example compounds were generated for the estrogen receptor alpha (ERÎ±), a well-known target with many approved therapeutics."
    imageTitle="Generated compounds with ABFE scores"
    imageSubtitle="For reference, ABFE scores for approved drugs of the estrogen receptor fall in the range of -10 to -25 kcal/mol."
    items={[
      {
        title: 'Strong predicted binding',
        description:
          'ABFE scores, the gold standard for computational binding affinity prediction, are shown for each generated compound. ABFE scores for approved drugs of the estrogen receptor fall in the range of -10 to -25 kcal/mol. Many Aethermol-generated compounds fall within this range, demonstrating their potential as viable drug candidates.',
      },
      {
        title: 'High synthetic accessibility',
        description:
          'Many of these compounds are likely to be readibly synthesizable, requiring only a few steps to produce.',
      },
      {
        title: 'Diverse and novel candidates',
        description:
          'The top scoring compounds show high structural diversity, with many novel scaffolds not previously reported in the literature.',
      },
    ]}
    image={{
      src: CompoundImage,
      alt: 'Generated compounds for estrogen receptor alpha',
      width: CompoundImage.width,
      height: CompoundImage.height,
    }}
  />

  <!-- Interactive Demo Section ******************* -->

  <section id="demo-interactive" class="py-16 md:py-20 bg-gray-50 dark:bg-slate-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6">
      <div class="text-center mb-12">
        <h2
          class="text-3xl md:text-4xl font-bold leading-tighter tracking-tighter mb-4 font-heading dark:text-gray-200"
        >
          Interactive LIMO Demo
        </h2>
        <p class="text-xl text-muted dark:text-slate-300 mb-8">
          Experience LIMO's molecular generation capabilities with our live interactive demo
        </p>
      </div>

      <div class="w-full">
        <div
          class="rounded-2xl overflow-hidden shadow-2xl bg-white dark:bg-slate-900 border border-slate-200 dark:border-slate-700"
        >
          <div class="relative">
            <iframe
              src="https://limo-demo-app.nrp-nautilus.io/demo-page"
              title="LIMO Interactive Demo"
              class="w-full h-screen min-h-[800px]"
              style="height: 80vh; border: none;"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
              loading="lazy"
              onload="this.style.display='block'; this.nextElementSibling.style.display='none';"
              onerror="this.style.display='none'; this.nextElementSibling.style.display='block';"></iframe>
            <div
              class="flex items-center justify-center h-screen min-h-[800px] bg-gray-100 dark:bg-slate-800"
              style="display: none;"
            >
              <div class="text-center">
                <div class="text-6xl mb-4">ðŸš€</div>
                <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-200 mb-4">Demo Currently Unavailable</h3>
                <p class="text-lg text-gray-600 dark:text-gray-400 mb-6">
                  The interactive demo is temporarily unavailable. Please try again later.
                </p>
                <div
                  class="bg-gradient-to-br from-slate-800 to-slate-900 rounded-xl p-6 border border-slate-700/50 max-w-md mx-auto"
                >
                  <h4 class="text-lg font-semibold text-blue-300 mb-4">Available Features:</h4>
                  <ul class="text-left space-y-2 text-slate-200">
                    <li class="flex items-start">
                      <span class="text-primary mr-2">â€¢</span>
                      <span>Molecular property sliders</span>
                    </li>
                    <li class="flex items-start">
                      <span class="text-primary mr-2">â€¢</span>
                      <span>3D molecular visualization</span>
                    </li>
                    <li class="flex items-start">
                      <span class="text-primary mr-2">â€¢</span>
                      <span>AI-powered chat support</span>
                    </li>
                    <li class="flex items-start">
                      <span class="text-primary mr-2">â€¢</span>
                      <span>Interactive binding analysis</span>
                    </li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="mt-8 text-center">
          <p class="text-sm text-muted dark:text-slate-400">
            Interact with molecular sliders, view 3D structures, and explore AI-powered chat support
          </p>
        </div>
      </div>
    </div>
  </section>
</Layout>
